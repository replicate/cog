-- cog.yaml --
build:
  python_version: "3.12"
  python_packages:
    - "pillow==10.4.0"
run: "run.py:Runner"

-- run.py --
import os
import tempfile

from cog import BaseRunner, Path
from PIL import Image


class Runner(BaseRunner):
    def run(self) -> Path:
        temp_dir = tempfile.mkdtemp()
        temp_path = os.path.join(temp_dir, "prediction.bmp")
        img = Image.new("RGB", (255, 255), "red")
        img.save(temp_path)
        return Path(temp_path)
