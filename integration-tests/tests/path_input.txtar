# Test Path input type (read file content)

# Build the image
cog build -t $TEST_IMAGE

# Predict reads content from file
cog run $TEST_IMAGE -i path=@input.txt
stdout 'hello from file'

-- cog.yaml --
build:
  python_version: "3.12"
run: "run.py:Runner"

-- run.py --
from cog import BaseRunner, Path


class Runner(BaseRunner):
    def run(self, path: Path) -> str:
        with open(path) as f:
            return f.read()

