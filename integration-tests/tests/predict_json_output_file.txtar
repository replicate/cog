# Test --json with --output writes JSON to file
# Source: test_run.py::test_run_json_output

# Build and run prediction with JSON output to file
cog build -t $TEST_IMAGE
cog run $TEST_IMAGE --json '{"s": "sackfield"}' --output output.json

# Verify file was created with correct content
exists output.json
exec cat output.json
stdout '"status": "succeeded"'
stdout '"output": "hello sackfield"'

-- cog.yaml --
build:
  python_version: "3.12"
run: "run.py:Runner"

-- run.py --
from cog import BaseRunner


class Runner(BaseRunner):
    def run(self, s: str) -> str:
        return "hello " + s
