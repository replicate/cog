# Test that zsh system package is installed and available in /bin
cog build -t $TEST_IMAGE

cog run $TEST_IMAGE
stdout ',sh,'
stdout ',zsh,'

-- cog.yaml --
build:
  python_version: "3.12"
  system_packages:
    - "zsh"
run: "run.py:Runner"

-- run.py --
from cog import BaseRunner
import os

class Runner(BaseRunner):
    def run(self) -> str:
        return "hello " + ",".join(os.listdir("/bin"))
