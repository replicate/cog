# Test full backwards compatibility: all legacy names together
# predict: key + predict.py + BasePredictor + def predict() + cog predict command

cog build -t $TEST_IMAGE

# Use legacy "cog predict" command with fully legacy model
cog predict $TEST_IMAGE -i s=world
stdout 'hello world'

-- cog.yaml --
build:
  python_version: "3.12"
predict: "predict.py:Predictor"

-- predict.py --
from cog import BasePredictor

class Predictor(BasePredictor):
    def predict(self, s: str) -> str:
        return "hello " + s
