# Build the image
cog build -t $TEST_IMAGE

# Predict with multiple file inputs
cog run $TEST_IMAGE -i files=@file1.txt -i files=@file2.txt
stdout 'content one'
stdout 'content two'

-- cog.yaml --
build:
  python_version: "3.12"
run: "run.py:Runner"

-- run.py --
from cog import BaseRunner, File


class Runner(BaseRunner):
    def run(self, files: list[File]) -> str:
        output_parts = []
        for f in files:
            content = f.read()
            if isinstance(content, bytes):
                content = content.decode('utf-8')
            output_parts.append(content)
        return "\n\n".join(output_parts)

