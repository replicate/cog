
# Build the image
cog build -t $TEST_IMAGE

# Basic prediction works
cog run $TEST_IMAGE -i s=world
stdout 'hello world'

# Missing required input fails
! cog run $TEST_IMAGE -i wrong=value
stderr 's: Field required'

-- cog.yaml --
build:
  python_version: "3.12"
run: "run.py:Runner"

-- run.py --
from cog import BaseRunner

class Runner(BaseRunner):
    def run(self, s: str) -> str:
        return "hello " + s
