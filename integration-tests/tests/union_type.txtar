stdout 'hello world'

-- cog.yaml --
build:
  python_version: "3.12"
run: "run.py:Runner"

-- run.py --
from cog import BaseRunner, Input


class Runner(BaseRunner):
    def setup(self):
        self.prefix = "hello"

    def run(
        self,
        text: str | None = Input(
            description="Text to prefix with 'hello '", default=None
        ),
    ) -> str:
        return self.prefix + " " + text
