# Test that ffmpeg system package is installed (common ML dependency)

# Build the image (the run command verifies ffmpeg is installed)
cog build -t $TEST_IMAGE

# Verify the runner works
cog run $TEST_IMAGE -i s=world
stdout 'hello world'

-- cog.yaml --
build:
  gpu: true
  python_version: "3.12"
  python_packages:
    - "torch==2.5.1"
  cuda: "12.4"
  run:
    - command: ffmpeg --help
run: "run.py:Runner"

-- run.py --
from cog import BaseRunner


class Runner(BaseRunner):
    def run(self, s: str) -> str:
        return "hello " + s
