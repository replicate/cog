# Test function-based runner (no class, just a function)

# Build the image
cog build -t $TEST_IMAGE

# Run using function-based runner
cog run $TEST_IMAGE -i prompt=world
stdout 'HELLO WORLD'

-- cog.yaml --
build:
  python_version: "3.13"
run: "run.py:run"

-- run.py --
from cog import Input


def run(
    prompt: str = Input(),
) -> str:
    return f"HELLO {prompt.upper()}"
